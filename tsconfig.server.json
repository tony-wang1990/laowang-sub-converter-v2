{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "outDir": "./dist-server",
        "rootDir": "./server",
        "strict": false,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src",
        "server/tests"
    ]
}